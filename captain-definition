{
  "schemaVersion": 2,
  "dockerfileLines": [
    "FROM node:18.18.0-alpine",
    "RUN mkdir -p /usr/src/app",
    "WORKDIR /usr/src/app",
    "COPY ./package.json ./pnpm-lock.yaml /usr/src/app/",
    "RUN npm install -g pnpm && pnpm install",
    "COPY ./ /usr/src/app",
    "RUN pnpm run build",
    "ENV NODE_ENV production",
    "ENV PORT 3000",
    "EXPOSE 3000",
    "CMD [ \"pnpm\", \"start\" ]"
  ]
}
